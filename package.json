{
  "name": "tennis-booking-bot",
  "version": "1.0.0",
  "description": "Telegram bot for tennis session booking with Google Calendar integration",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsc && node dist/index.js",
    "dev": "ts-node src/index.ts",
    "watch": "tsc -w",
    "db:init": "ts-node src/database/init.ts",
    "db:migrate": "ts-node src/database/migrate.ts",
    "db:seed": "ts-node src/database/seed.ts",
    "db:backup": "ts-node src/database/backup.ts",
    "db:restore": "ts-node src/database/restore.ts",
    "db:health": "ts-node src/database/health.ts"
  },
  "dependencies": {
    "telegraf": "^4.15.0",
    "googleapis": "^128.0.0",
    "sqlite3": "^5.1.6",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "moment": "^2.29.4",
    "node-cron": "^3.0.2",
    "fs-extra": "^11.1.1",
    "better-sqlite3": "^8.7.0"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/express": "^4.17.17",
    "@types/node-cron": "^3.0.8",
    "@types/better-sqlite3": "^7.6.5",
    "@types/fs-extra": "^11.0.2",
    "typescript": "^5.2.2",
    "ts-node": "^10.9.1"
  }
}
